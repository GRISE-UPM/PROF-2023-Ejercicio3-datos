
	<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
		<modelVersion>4.0.0</modelVersion>

		<groupId>es.upm.grise</groupId>
		<artifactId>prof.curso2023.ejercicio3</artifactId>
		<version>0.0.1-SNAPSHOT</version>

		<name>prof.curso2023.ejercicio3</name>

		<properties>
			<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		</properties>

		<repositories>
			<repository>
				<id>jitpack.io</id>
				<url>https://jitpack.io</url>
			</repository>
		</repositories>
		
		<pluginRepositories>
			<pluginRepository>
				<id>jitpack.io</id>
				<url>https://jitpack.io</url>
			</pluginRepository>
		</pluginRepositories>


	<dependencies>
			<!-- https://mvnrepository.com/artifact/org.junit.jupiter/junit-jupiter-api -->
			<dependency>
				<groupId>org.junit.jupiter</groupId>
				<artifactId>junit-jupiter-api</artifactId>
				<version>5.10.0</version>
				<scope>test</scope>
			</dependency>
			<!-- https://mvnrepository.com/artifact/org.junit.jupiter/junit-jupiter-engine -->
			<dependency>
				<groupId>org.junit.jupiter</groupId>
				<artifactId>junit-jupiter-engine</artifactId>
				<version>5.10.0</version>
				<scope>test</scope>
			</dependency>
			<dependency>
	    		<groupId>com.github.samendozar</groupId>
	    		<artifactId>test-smells-detector-plugin</artifactId>
	    		<version>1.1.1</version>
	    		<scope>test</scope>
			</dependency>
			
		</dependencies>

		<build>
			<plugins>
				<!-- https://stackoverflow.com/questions/49398894/unable-to-compile-simple-java-10-java-11-project-with-maven -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.6.0</version>
					<configuration>
						<release>11</release>
					</configuration>
				</plugin>

				<!-- https://dzone.com/articles/why-your-junit-5-tests-are-not-running-under-maven -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-surefire-plugin</artifactId>
					<version>2.22.0</version>
				</plugin>
				<!-- Test-Smells-Detector Plugin Execution -->
            <plugin>
                <groupId>com.github.samendozar</groupId>
                <artifactId>test-smells-detector-plugin</artifactId>
                <version>1.1.1</version>
                <executions>
                    <execution>
                        <id>run-test-smells-detector</id>
                        <goals>
                            <goal>test-smells-counter</goal> <!-- Replace 'detect' with the goal name specified in the plugin -->
                        </goals>
                        <phase>test</phase> <!-- Run during the 'test' phase -->
                    </execution>
                </executions>
            </plugin>
			</plugins>
		</build>

	</project>
